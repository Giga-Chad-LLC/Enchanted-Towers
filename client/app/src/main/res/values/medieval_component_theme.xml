<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MedievalStyle" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">#F6E8D1</item>
        <!-- Button style -->
        <item name="buttonStyle">@style/MedievalStyle.Button</item>
        <!-- Text style -->
        <item name="android:textAppearance">@style/MedievalStyle.TextAppearance</item>
        <!-- EditText style -->
        <item name="editTextStyle">@style/MedievalStyle.EditText</item>
        <!-- NoActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- Text style -->
    <style name="MedievalStyle.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/brawler</item>
    </style>

    <!-- Button style -->
    <style name="MedievalStyle.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/brawler_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">38dp</item>
        <item name="android:paddingRight">38dp</item>
        <item name="android:minWidth">240dp</item>
    </style>

    <!-- EditText style -->
    <style name="MedievalStyle.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/brawler_regular</item>
        <item name="android:padding">14dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
    </style>
</resources>
